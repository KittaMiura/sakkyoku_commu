<div class="container">
    <div class="row">
      <div class="col-md-2 mt-5">
        <%= link_to new_group_path, class: "btn btn-outline-dark btn-block mx-auto text-nowrap" do %>
          <i class="fas fa-user-cog"></i> グループ作成
        <% end %>
      </div>

        <div class="col-md-12 mx-auto mt-5">
              <h2>グループ一覧</h2>
              <table class='table table-hover table-inverse'>
                <thead>
                  <tr>
                    <th class="col-md-2"></th>
                    <th class="col-md-2">グループ名</th>
                    <th class="col-md-2">作成者</th>
                    <th class="col-md-2">紹介文</th>
                    <th class="col-md-2">メンバー数</th>
                    <th class="col-md-2">参加条件</th>
                    <th class="col-md-2"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @groups.each do |group| %>
                    <tr>
                      <td><%= image_tag group.get_group_image, size: '100x100' %></td>
                      <td><%= link_to group.name, group_path(group) %></td>
                      <td>
                        <%= group.user ? group.user.user_name : "不明" %>
                      </td>
                      <td><%= group.introduction %></td>
                      <td><%= group.users.count %></td>
                      <td><%= group.status %></td>
                      <td>
                        <% if group.owner_id == current_user.id %>
                          <%= link_to '編集', edit_group_path(group), class: "btn btn-sm btn-success text-nowrap" %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
        </div>
    </div>
</div>