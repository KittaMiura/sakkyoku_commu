<% if @user.user_name == 'ゲスト' %>
<div class="container pt-5">
      <div class="row">
        <div class="col-12">
          <h4>グループを作成するには、アカウント作成、またはログインをしてください。</h4>
        </div>
        <div class="col-6 mt-5">
          <%= link_to 'ログイン', new_user_session_path, class:"btn btn-secondary" %>
          <%= link_to '会員登録', new_user_registration_path, class:"btn btn-secondary ml-3" %>
        </div>

<% else %>
  <div class="container pt-5">
      <div class="row">
          <div class="col-md-8 mx-auto">
            <h1>group作成</h1>
              <%= render 'form', group: @group %>
          </div>
      </div>
  </div>
<% end %>