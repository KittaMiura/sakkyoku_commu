<% if @user.user_name == 'ゲスト' %>
<div class="container pt-5">
  <div class="row">
    <h4>ゲストユーザーはグループ作成ができません</h4>
    <%= render 'users/shared/guest' %>
  </div>
</div>
<% else %>
  <div class="container pt-5">
      <div class="row">
          <div class="col-md-8 mx-auto">
            <h1>group作成</h1>
              <%= render 'form', group: @group %>
          </div>
      </div>
  </div>
<% end %>