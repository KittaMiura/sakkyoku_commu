<h1>マイページ</h1>

<div>
  <h3><%= @user.user_name %></h3>
  <%= image_tag @user.get_profile_image %>
</div>

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image %></p>
  <p>タイトル：<%= post.title %></p>
  <p>説明：<%= post.introduction %></p>
  <p>ユーザーネーム：<%= post.user.user_name %></p>
</div>
<% end %>