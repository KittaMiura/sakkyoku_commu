<h1>会員詳細画面</h1>

<div>
  <h3><%= @user.user_name %></h3>
  <%= image_tag @user.get_profile_image %>
  <% if @user == current_user %>
    <%= link_to "編集", edit_user_path(@user) %>
  <% end %>
</div>

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image %></p>
  <p>タイトル：<%= post.title %></p>
  <p>説明：<%= post.introduction %></p>
  <p>ユーザーネーム：<%= post.user.user_name %></p>
</div>
<% end %>