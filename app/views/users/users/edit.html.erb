<h1>会員情報編集</h1>

<%= form_with model: @user, local:true do |f| %>
  <div class="form-group">
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :profile_image %>
  </div>
  <div class="form-group">
    <%= f.label :profile %>
    <%= f.text_area :profile %>
  </div>
      <div class="form-group">
        <%= f.submit %>
      </div>

  <%= link_to "退会", unsubscribe_path %>

<% end %>



