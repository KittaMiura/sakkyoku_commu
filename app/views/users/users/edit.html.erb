      <div class='col-md-12 mt-3'>
        <h1>ユーザー情報編集</h1>
        <%= form_with model: @user, local:true do |f| %>
        <table class="table col-md-8 mt-5">
          <tbody>
            <tr>
              <th><%= f.label :image %></th>
              <td><%= f.file_field :profile_image %></td>
            </tr>
            <tr>
              <th><%= f.label :user_name, "name" %></th>
              <td><%= f.text_field :user_name %></td>
            </tr>
            <tr>
              <th><%= f.label :profile %></th>
              <td><%= f.text_area :profile %></td>
            </tr>
            <tr>
              <th></th>
              <td></td>
            </tr>
          </tbody>

        </table>
        <div>
          <%= f.submit class: "btn btn-success" %>
        </div>
        <div class="mx-auto mt-1">
          <%= link_to "退会", unsubscribe_path, class: "btn btn-danger" %>
        </div>
      <% end %>
      </div>
  </div>
</div>