<div class="container">
  <div class="row">

      <div class='col-md-3 mt-3'>
        <%= render 'info', user: @user %>
      </div>

      <div class='col-md-9 mt-3'>
        <h1>ユーザー情報編集</h1>
        <table class="table col-md-8 mt-5">
          <%= form_with model: @user, local:true do |f| %>
          <tbody>
            <tr>
              <th><%= f.label :image %></th>
              <td><%= f.file_field :profile_image %></td>
            </tr>
            <tr>
              <th><%= f.label :user_name, "name" %></th>
              <td><%= f.text_field :user_name %></td>
            </tr>
            <tr>
              <th><%= f.label :profile %></th>
              <td><%= f.text_area :profile %></td>
            </tr>
            <tr>
              <th></th>
              <td></td>
            </tr>
          </tbody>
        </table>
        <%= f.submit class: "btn btn-outline-dark" %>
      <% end %>
      </div>
      <div class="mx-auto">
          <%= link_to "退会", unsubscribe_path, class: "btn btn-danger" %>
      </div>
  </div>
</div>