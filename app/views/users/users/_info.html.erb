<table class='table table-active mt-2' style="table-layout:fixed;width:100%;">
	<div class="text-center">
		<h2>User info</h2>
		<%= image_tag user.get_profile_image, size:'150x150' %>
	</div>
	<colgroup>
    <col style="width:33%;">
    <col style="width:67%;">
  </colgroup>
  <thead>
  	<th class="col-xs-2">name</th><th class="col-xs-2"><%= user.user_name %></th>
  </thead>
  <tbody>
    <tr><th>profile</th><td style="word-wrap:break-word;"><%= user.profile %></td></tr>
      <tr><th>follows</th>
        <td>
          <%= link_to user_followings_path(user.id) do %>
            <%= user.followings.count %>
          <% end %>
        </td>
      </tr>
      <tr><th>followers</th>
        <td>
          <%= link_to user_followers_path(user.id) do %>
            <%= user.followers.count %>
          <% end %>
        </td>
      </tr>
  </tbody>
</table>

	<!--会員編集ボタン-->
	<%= link_to edit_user_path(user), class: "col-8 btn btn-outline-secondary btn-block mx-auto" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>