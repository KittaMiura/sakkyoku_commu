<h1>投稿一覧</h1>

<p>
  <!--タグリスト-->
  タグ一覧：
  <% @tag_list.each do |list|%>
    <%=link_to list.name,search_tag_path(tag_id: list.id) %>
    <%="(#{list.posts.count})" %>
  <% end %>
</p>

<div class="card-list-container py-5">
  <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image %>
      <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-2"><!--投稿ユーザー画像-->
              <%= image_tag post.user.get_profile_image, size: '50x50', class:"mt-3 rounded-circle"; %>
            </div>
            <div class="col-10">

            </div>

              <p>タイトル：<%= post.title %></p>
              <p>説明：<%= post.introduction %></p>
              <p>タグ：<%= post.tags.map(&:name).join(', ') %></p>
              <p>ユーザーネーム：<%= post.user.user_name %></p>
              <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
              <%= link_to "詳細", post_path(post) %>
          </div>
        </div>
    </div>

  <% end %>

</div>



<%= paginate @posts %>