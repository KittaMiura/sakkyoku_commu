<h1>投稿フォーム</h1>

<%= form_with model: @post do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>タイトル</h4>
      <%= f.text_field :title %>
    <h4>説明文</h4>
      <%= f.text_area :introduction %>
    
    <div class="field">
      <%= f.label"タグ (,で区切ると複数タグ登録できます)" %><br>
      <%= f.text_field :name, value: @tag_list %>
    </div>
    
    <%= f.submit '投稿' %>
<% end %>