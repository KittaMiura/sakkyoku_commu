            <%= f.text_field :title %>
          <h4 class="pt-2">説明文</h4>
          <div class="rich_area">
            <%= f.rich_text_area :introduction %>
          </div>
          <div class="field">
            <%= f.label"タグ (,で区切ると複数タグ登録できます)" %><br>
            <%= f.text_field :name, value: @tag_list %>
          </div>

