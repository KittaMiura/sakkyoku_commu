<div class='container'>
  <div class='row'>
    <div class='col-6'>
      <div class="d-flex bd-highlight mb-3 mt-3">
        <h5 class="p-2 bd-highlight">
          <span class="px-3 bg-ligh alert-secondary">
            <%= @user.user_name %>さんの会員情報編集
          </span>
        </h5>
      </div>
    </div>
  </div>
  <div class="container mx-5">
    <div class="col-12">
      <%= form_with url: admin_user_path(@user), model: @user, local: true do |user| %>
        <div class="form-group">
                <%= user.label :id, '会員ID', class: "col-sm-2 control-label" %>
                <%= @user.id %>
              </div>
        <div class="form-group">
                <%= user.label "ユーザーネーム", class: "col-sm-2 control-label"%>
                <%= user.text_field :user_name, class: "mr-5" %>
              </div>
        <div class="form-group">
                <%= user.label "メールアドレス", class: "col-sm-2 control-label" %>
                <%= user.text_field :email, class: "mr-5" %>
              </div>
        <div class="form-group">
                <%= user.label "ステータス" , class: "col-sm-2 control-label"%>
                <%= user.radio_button :is_deleted, :false %>
                <%= user.label :is_deleted, "有効", value: false %>
                <%= user.radio_button :is_deleted,  :true %>
                <%= user.label :is_deleted, "退会", value: true %>
              </div>
        <div class="actions">
                <%= user.label :"　", class: "col-sm-2 control-label" %>
                <%= user.submit "変更を保存", class: 'btn btn-success' %>
              </div>
      <% end %>
    </div>
  </div>
</div>