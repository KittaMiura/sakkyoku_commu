<div class='container'>
  <div class='row'>
    <div class='col-6'>
      <div class="d-flex bd-highlight mb-3 mt-3 ">
        <h5 class="p-2 bd-highlight">
          <span class="py-2 px-4 bg-ligh alert-secondary">
            <%= @user.user_name %>さんの会員詳細
          </span>
        </h5>
　　　</div>

      <table class="table table-borderless ">
        <tr>
          <td>会員ID</td>
          <td colspan="2"><%= @user.id %></td>
        </tr>

        <tr>
          <td>ユーザーネーム</td>
          <td colspan="2"><%= @user.user_name %></td>
        </tr>
        <tr>

        <tr>
          <td>メールアドレス</td>
          <td colspan="2"><%= @user.email %></td>
        </tr>

        <tr>
          <td>ステータス</td>
           <% if @user.is_deleted == true %>
              <td class="text-black-50">退会</td>
           <% else %>
              <td class="text-success">有効</td>
           <% end %>
        </tr>

        <tr>
          <td></td>
          <td><%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %></td>
        </tr>

      </table>
    </div>
  </div>
</div>