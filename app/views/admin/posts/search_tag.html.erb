<div class="row">

  <%= render 'tag' %>

  <div class='container'>
    <h1 class='mt-3'>タグ：<%=@tag.name%>の投稿一覧</h1>
    <div class="card-deck">
    	<div class="row col-12">
        <% @posts.each do |post| %>
      		<div class="col-sm-3 py-3">
      			<div class="card h-100 shadow-lg">
      				<%= link_to admin_post_path(post.id) do %>
              <%= image_tag post.get_image, size: '180', class:"card-img-top"; %>
              <% end %>
      				<div class="card-body">
      					<h4 class="card-title"><%= link_to admin_post_path(post.id), class:"text-dark" do %><strong><%= post.title %></span></strong><% end %></h4>
      					<%= link_to admin_user_path(post.user.id), class:"text-dark" do %>
                  <%= image_tag post.user.get_profile_image, size: '40x40', class:"rounded-circle" %>
                    <span><%= post.user.user_name %></span><br>
                <% end %>
      				</div>
      			</div>
      		</div>
        <% end %>
    	</div>
    	<div class='mx-auto pt-5'>
        <%= paginate @posts %>
      </div>
    </div>
  </div>

</div>